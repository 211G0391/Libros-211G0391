<UserControl x:Class="Libros_211G0391.Views.UCDatos"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Libros_211G0391.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel Margin="10">
        <Image DockPanel.Dock="Left"  Stretch="UniformToFill" Width="250" Source="{Binding Libro.URLPortada}"></Image>

        <StackPanel>
            <TextBlock FontSize="30" FontWeight="Black" Margin="10" TextAlignment="Center" Text="{Binding Libro.Titulo}"></TextBlock>
            <TextBlock FontSize="20" Margin="10" TextAlignment="Center" Text="{Binding Libro.TituloOriginal}"></TextBlock>
            <TextBlock FontSize="10" Margin="10" TextAlignment="Center" Text="{Binding Libro.Autor}"></TextBlock>
            <TextBlock FontSize="10" Margin="10" TextAlignment="Center" Text="{Binding Libro.Reseña}"></TextBlock>

            <TextBlock Margin="10" TextAlignment="Center" Text="{Binding Libro.FehcaDePublicacion, StringFormat=d}"></TextBlock>

            
            
        </StackPanel>



    </DockPanel>
</UserControl>
